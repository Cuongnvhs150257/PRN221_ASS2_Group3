<Window x:Class="MusicStore.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicStore"
        mc:Ignorable="d"
        Title="LoginWindow" Height="376" Width="400" Background="LightBlue">
    <Grid Margin="0,0,-38,0">

        <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Center" Width="400" Margin="0,30,0,145">
            <Label Name="lblUser" Content="Username: " Width="300px"></Label>
            <TextBox Name="txtUser"
                             Height="25" Width="300px" />
            <Label Name="lblPass" Content="Password: " Width="300px"></Label>
            <TextBox Name="txtPass" Width="300px"
                             Height="25"/>
        </StackPanel>
        <Button Name="btnLogin" Margin="92,156,228,107" Click="btnLogin_Click" Content="Login" Width="80px" Height="27" />
        <Button Name="btnCancel" Height="27" Width="80" Content="Cancel" Margin="214,156,106,107" Click="btnCancel_Click"/>

    </Grid>
</Window>
